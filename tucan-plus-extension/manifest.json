{
    "manifest_version": 3,
    "name": "TUCaN Plus",
    "version": "0.41.0",
    "description": "Quality of life improvements for TUCaN",
    "update_url": "https://tucan-plus.github.io/tucan-plus/updates.xml",
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    },
    "permissions": [
        "declarativeNetRequestWithHostAccess",
        "webRequest",
        "scripting",
        "storage",
        "cookies",
        "contextMenus",
        "notifications"
    ],
    "omnibox": {
        "keyword": "tucan"
    },
    "host_permissions": [
        "https://www.tucan.tu-darmstadt.de/*",
        "http://www.tucan.tu-darmstadt.de/*",
        "https://tucan-plus.selfmade4u.de/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.tucan.tu-darmstadt.de/scripts/mgrqispi.dll?APPNAME=CampusNet&PRGNAME=CHANGELANGUAGE&ARGUMENTS=-N*,-N001",
                "https://www.tucan.tu-darmstadt.de/scripts/mgrqispi.dll?APPNAME=CampusNet&PRGNAME=CHANGELANGUAGE&ARGUMENTS=-N*,-N002"
            ],
            "js": [
                "content-script-redirect.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://www.tucan.tu-darmstadt.de/*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "tucan-plus@selfmade4u.de",
            "update_url": "https://tucan-plus.github.io/tucan-plus/updates.json"
        }
    },
    "icons": {
        "512": "logo.png"
    },
    "background": {
        "service_worker": "background.js",
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },
    "action": {
        "default_icon": {
            "512": "logo.png"
        },
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        {
            "resources": [
                "public/index.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        },
        {
            "resources": [
                "public/*.wasm"
            ],
            "extension_ids": [
                "*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "commands": {
        "open-in-tucan-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+1"
            },
            "description": "Open page in TUCaN"
        }
    }
}